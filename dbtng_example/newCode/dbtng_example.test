<?php

class DBTNGSampleUnitTestCase extends DrupalWebTestCase {

  /**
   * {@inheritdoc}
   */
  public static function getInfo() {
    return array(
      'name' => 'DBTNG example unit and UI tests',
      'description' => 'Various unit tests on the dbtng example module.' ,
      'group' => 'Examples',
    );
  }

  /**
   * {@inheritdoc}
   */
  public function setUp() {
    parent::setUp('dbtng_example');
  }

  /**
   * Test default module installation, two entries in the database table.
   */
  public function testInstall() {
    $result = dbtng_sample_entry_load();
    $this->assertEqual(
      count($result),
      2,
      'Found two entries in the table after installing the module.'
    );
  }


  /**
   * Test the UI.
   */
  public function testUI() {
    // Test the basic list.
    $this->drupalGet('sample/dbtng');
    $this->assertPattern("/Ronald[td\/<>\w]+McDonald/", "Text 'Ronald McDonald' found in table");

    // Test the add tab.
    // Add the new entry.
    $this->drupalPost('sample/dbtng/add',
      array(
        'fname'  => 'Some',
        'lname' => 'Anonymous',
        'age' => 33,
      ),
      t('Add')
    );
    // Now find the new entry.
    $this->drupalGet('sample/dbtng');
    $this->assertPattern("/Some[td\/<>\w]+Anonymous/", "Text 'Some Anonymous' found in table");

    // Try the update tab.
    // Find out the pid of our "anonymous" guy.
    $result = dbtng_sample_entry_load(array('lname' => 'Anonymous'));
    $this->drupalGet("sample/dbtng");
    $this->assertEqual(
      count($result),
      1,
      'Found one entry in the table with surname = "Anonymous".'
    );
    $entry = $result[0];
    unset($entry->uid);
    $entry->name = 'NewFirstName';
    $this->drupalPost('sample/dbtng/update', (array) $entry, t('Update'));
    // Now find the new entry.
    $this->drupalGet('sample/dbtng');
    $this->assertPattern("/NewFirstName[td\/<>\w]+Anonymous/", "Text 'NewFirstName Anonymous' found in table");

    // Try the advanced tab.
    $this->drupalGet('sample/dbtng/advanced');
    $rows = $this->xpath("//*[@id='block-system-main']/div/table[1]/tbody/tr");
    $this->assertEqual(count($rows), 1, "One row found in advanced view");
    $this->assertFieldByXPath("//*[@id='block-system-main']/div/table[1]/tbody/tr/td[4]", "Ronald", "Name 'Ronald' Exists in advanced list");
  }

  /**
   * Test several combinations, adding entries, updating and deleting.
   */
  public function testAPIExamples() {
    // Create a new entry.
    $entry = array(
      'fname' => 'James',
      'lname' => 'Doe',
      'age' => 23,
    );
    dbtng_sample_entry_insert($entry);

    // Save another entry.
    $entry = array(
      'fname' => 'Jane',
      'lname' => 'NotDoe',
      'age' => 19,
    );
    dbtng_sample_entry_insert($entry);

    // Verify that 4 records are found in the database.
    $result = dbtng_sample_entry_load();
    $this->assertEqual(
      count($result),
      4,
      'Found a total of four entries in the table after creating two additional entries.'
    );

    // Verify 2 of these records have 'Doe' as surname.
    $result = dbtng_sample_entry_load(array('lname' => 'Doe'));
    $this->assertEqual(
      count($result),
      2,
      'Found two entries in the table with surname = "Doe".'
    );

    // Now find our not-Doe entry.
    $result = dbtng_sample_entry_load(array('lname' => 'NotDoe'));
    $this->assertEqual(
      count($result),
      1,
      'Found one entry in the table with surname "NotDoe');
    // Our NotDoe will be changed to "NowDoe".
    $entry = $result[0];
    $entry->lname = "NowDoe";
    dbtng_sample_entry_update((array) $entry);

    $result = dbtng_sample_entry_load(array('lname' => 'NowDoe'));
    $this->assertEqual(
      count($result),
      1,
      "Found renamed 'NowDoe' surname");

    // Read only John Doe entry.
    $result = dbtng_sample_entry_load(array('fname' => 'John', 'lname' => 'Doe'));
    $this->assertEqual(
      count($result),
      1,
      'Found one entry for John Doe.'
    );
    // Get the entry.
    $entry = (array) end($result);
    // Change age to 45
    $entry['age'] = 45;
    // Update entry in database.
    dbtng_sample_entry_update((array) $entry);

    // Find entries with age = 45
    // Read only John Doe entry.
    $result = dbtng_sample_entry_load(array('lname' => 'NowDoe'));
    $this->assertEqual(
      count($result),
      1,
      'Found one entry with surname = Nowdoe.'
    );

    // Verify it is Jane NowDoe.
    $entry = (array) end($result);
    $this->assertEqual(
      $entry['fname'],
      'Jane',
      'The name Jane is found in the entry'
    );
    $this->assertEqual(
      $entry['lname'],
      'NowDoe',
      'The surname NowDoe is found in the entry'
    );

    // Delete the entry.
    dbtng_sample_entry_delete($entry);

    // Verify that now there are only 3 records.
    $result = dbtng_sample_entry_load();
    $this->assertEqual(
      count($result),
      3,
      'Found only three records, a record was deleted.'
    );
  }
}
